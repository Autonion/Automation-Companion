<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_panel_dark"
    android:backgroundTint="#CC202020"
    android:padding="16dp"
    android:elevation="20dp"
    android:gravity="center"
    android:clickable="true"
    android:focusable="true">

    <!-- Duration Section (Long Click only) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/tvHoldTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration:"
            android:textColor="#BBBBBB"
            android:textSize="12sp"
            android:layout_marginEnd="8dp"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/etActionDuration"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textColorHint="#80FFFFFF"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:inputType="number"
            android:maxLines="1"
            android:gravity="center"
            android:backgroundTint="#80FFFFFF"
            android:visibility="gone"
            tools:ignore="LabelFor" />

        <TextView
             android:id="@+id/tvDurationUnit"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="ms"
             android:textSize="12sp"
             android:textColor="#80FFFFFF"
             android:layout_marginStart="4dp"
             android:visibility="gone"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delay After Action"
        android:textColor="#BBBBBB"
        android:textSize="12sp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="8dp"/>

    <!-- Delay Input Section (Min / Sec / Ms) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <!-- Minutes -->
        <EditText
            android:id="@+id/etDelayMin"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:hint="0"
            android:inputType="number"
            android:maxLength="2"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#60FFFFFF"
            android:textSize="14sp"
            android:backgroundTint="#80FFFFFF"
            tools:ignore="LabelFor" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="m"
            android:textColor="#AAAAAA"
            android:textSize="12sp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="8dp"/>

        <!-- Seconds -->
        <EditText
            android:id="@+id/etDelaySec"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:hint="0"
            android:inputType="number"
            android:maxLength="2"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#60FFFFFF"
            android:textSize="14sp"
            android:backgroundTint="#80FFFFFF"
            tools:ignore="LabelFor" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="s"
            android:textColor="#AAAAAA"
            android:textSize="12sp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="8dp"/>

        <!-- Milliseconds -->
        <EditText
            android:id="@+id/etDelayMs"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:hint="0"
            android:inputType="number"
            android:maxLength="4"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#60FFFFFF"
            android:textSize="14sp"
            android:backgroundTint="#80FFFFFF"
            tools:ignore="LabelFor" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ms"
            android:textColor="#AAAAAA"
            android:textSize="12sp"
            android:layout_marginStart="2dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="4dp">

        <ImageView
            android:id="@+id/btnCancel"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="24dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_close"
            android:backgroundTint="#FF5252"
            android:padding="4dp"
            android:contentDescription="@string/cancel"
            android:tint="#FF5252"
            tools:ignore="UseAppTint"
            xmlns:app="http://schemas.android.com/apk/res-auto"/>

        <ImageView
            android:id="@+id/btnConfirm"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="24dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_check"
            android:padding="4dp"
            android:contentDescription="@string/ok"
            android:tint="#69F0AE"
            tools:ignore="UseAppTint"
            xmlns:app="http://schemas.android.com/apk/res-auto"/>

    </LinearLayout>
</LinearLayout>